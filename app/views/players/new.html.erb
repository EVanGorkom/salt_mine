<%= render partial: "shared/nav-bar" %>

<h2>Please register as a player with your name and a unique username</h2>

<%= form_with url: "/players", method: :post, local: true do |f| %>
  <%= f.label :name, "Name:" %>
  <%= f.text_field :name %> <br><br>

  <%= f.label :username, "Username:" %>
  <%= f.text_field :username %> <br><br>

  <%= f.submit "Submit" %>
<% end %>